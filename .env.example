# Cloudflare account / project infra (configured in dashboard / wrangler)
# D1 DB ID and queue names are set in wrangler.toml, not here.

# === Security / crypto ===
# 32-byte AES key as hex (64 chars). Example: openssl rand -hex 32
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here_replace_with_actual_value

# === DCVaaS Control Plane Settings ===
# Root where you publish TXT/CNAME. This should match VALIDATION_ROOT in wrangler.
VALIDATION_ROOT=dcv.pcnaid.com

# The CNAME target that domains should point to (your SaaS origin)
SAAS_CNAME_TARGET=dcv.pcnaid.com

# === Cloudflare API credentials ===
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here

# === Platform Owner (for unlimited domains) ===
# Frontend env var
VITE_PLATFORM_OWNER_EMAIL=admin@pcnaid.com
# Backend env var (set via wrangler secret put)
PLATFORM_OWNER_EMAIL=admin@pcnaid.com

# === Stripe Configuration (optional) ===
# Frontend price IDs
VITE_STRIPE_PRICE_PRO=price_xxx_pro_monthly
VITE_STRIPE_PRICE_AGENCY=price_xxx_agency_monthly
# Backend secrets (set via wrangler secret put)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# === API Access ===
# Frontend: API token for single-org mode
VITE_API_TOKEN=
# Frontend: API base URL
VITE_API_BASE_URL=https://dcv.pcnaid.com

# === Internal admin token (optional) ===
# For demo mode and admin endpoints
# Frontend env var (for calling admin endpoints)
VITE_INTERNAL_ADMIN_TOKEN=your_internal_admin_token_here
# Backend env var (set via wrangler secret put or wrangler.toml)
INTERNAL_ADMIN_TOKEN=your_internal_admin_token_here

# === CORS Configuration ===
CORS_ALLOW_ORIGINS=http://localhost:5173,https://dcv.pcnaid.com

# === Email (optional) ===
# RESEND_API_KEY=re_...
